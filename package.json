{
  "name": "wordle-clone",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "gts lint ./src/**/*.ts",
    "clean": "gts clean",
    "compile": "tsc --incremental",
    "fix": "gts fix ./src/**/*.ts",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint",
    "launch": "node dist/",
    "copy-static": "cp src/public/index.html dist/public/ && cp src/public/style.css dist/public/",
    "pack": "rm -rf ./dist && mkdir dist && cp -r ./build/* ./dist/ && webpack",
    "start": "npm run lint && npm run compile && npm run pack && npm run copy-static && node ./dist/"
  },
  "repository": {
    "type": "git",
